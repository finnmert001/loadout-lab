extends layouts/layout

block title
    title Loadout Lab - Contact

block content
    .container.home-page
        h1 Contact Us

        form(action='/index' style='margin-top: 40px; background-color: #f5f5f5; text-align: left; padding: 20px;')
            h2 Name
            input(style='width: 100%; text-align: left;' type='text' placeholder='Please enter your name.' required)

            h2 Email
            input(style='width: 100%; text-align: left;' type='text' placeholder='Please enter your email.' required)

            h2 Your Message
            input(style='width: 100%; height: 250px; text-align: left; vertical-align: top;' type='text' required)

            .submit-button
                button.send(type='submit') Send