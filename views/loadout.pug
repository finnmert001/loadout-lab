extends layouts/layout

block content
    .loadout-page-view
        h1.loadout-title-view #{loadout.loadoutName}

        .weapon-container-view
            .weapon-section-view
                h2 Primary Weapon
                img.weapon-image-view(src=loadout.primaryWeapon.image, alt=loadout.primaryWeapon.name)
                p #{loadout.primaryWeapon.name}

            .attachment-section-view
                h3 Attachments
                if loadout.primaryAttachments.length
                    ul.attachment-list-view
                        each attachment in loadout.primaryAttachments
                            li.attachment-item-view= attachment
                else
                    p No attachments selected.

        .weapon-container-view
            .weapon-section-view
                h2 Secondary Weapon
                img.weapon-image-view(src=loadout.secondaryWeapon.image, alt=loadout.secondaryWeapon.name)
                p #{loadout.secondaryWeapon.name}

            .attachment-section-view
                h3 Attachments
                if loadout.secondaryAttachments.length
                    ul.attachment-list-view
                        each attachment in loadout.secondaryAttachments
                            li.attachment-item-view= attachment
                else
                    p No attachments selected.

        .button-container-view
            a.edit-button-view(href=`/edit-loadout/${loadout._id}`) Edit Loadout
            button.back-button-view(onclick="history.back()") Back
